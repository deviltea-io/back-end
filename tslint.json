{
  "defaultSeverity": "error",
  "extends": ["tslint-config-prettier"],
  "jsRules": {},
  "rules": {
    "space-before-function-paren": true,
    "no-console": false,
    "array-type": true,
    "arrow-parens": true,
    "arrow-return-shorthand": true,
    "await-promise": true,
    "interface-name": true,
    "class-name": true,
    "comment-format": true,
    "file-name-casing": [true, { ".ts": "camel-case", ".json": "kebab-case" }],
    "triple-equals": true,
    "switch-default": true,
    "switch-final-break": true,
    "max-line-length": {
      "options": { "limit": 120 },
      "severity": "warn"
    },
    "promise-function-async": true,
    "space-within-parens": true,
    "newline-per-chained-call": true,
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ]
  },
  "rulesDirectory": []
}
